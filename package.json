{
  "name": "vscode-ctrmml",
  "displayName": "ctrmml",
  "description": "Language support for ctrmml",
  "version": "0.0.9",
  "publisher": "ulalume",
  "repository": {
    "type": "git",
    "url": "https://github.com/ulalume/vscode-ctrmml.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:ctrmml",
    "onCommand:ctrmml.play",
    "onCommand:ctrmml.playFromCursor",
    "onCommand:ctrmml.stop",
    "onCommand:ctrmml.mdslinkFile",
    "onCommand:ctrmml.mdslinkDirectory",
    "onCommand:ctrmml.mdslinkFromConfig",
    "onCommand:ctrmml.exportVgm",
    "onCommand:ctrmml.exportWav"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ctrmml.play",
        "title": "ctrmml: play"
      },
      {
        "command": "ctrmml.playFromCursor",
        "title": "ctrmml: play from cursor"
      },
      {
        "command": "ctrmml.stop",
        "title": "ctrmml: stop"
      },
      {
        "command": "ctrmml.mdslinkFile",
        "title": "ctrmml: mdslink file"
      },
      {
        "command": "ctrmml.mdslinkDirectory",
        "title": "ctrmml: mdslink directory"
      },
      {
        "command": "ctrmml.mdslinkFromConfig",
        "title": "ctrmml: mdslink from mdslink.json"
      },
      {
        "command": "ctrmml.exportVgm",
        "title": "ctrmml: export vgm"
      },
      {
        "command": "ctrmml.exportWav",
        "title": "ctrmml: export wav"
      }
    ],
    "keybindings": [
      {
        "command": "ctrmml.play",
        "key": "ctrl+alt+shift+p",
        "mac": "cmd+alt+shift+p",
        "when": "editorTextFocus && editorLangId == ctrmml"
      },
      {
        "command": "ctrmml.playFromCursor",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p",
        "when": "editorTextFocus && editorLangId == ctrmml"
      },
      {
        "command": "ctrmml.stop",
        "key": "ctrl+alt+.",
        "mac": "cmd+alt+.",
        "when": "editorTextFocus && editorLangId == ctrmml"
      }
    ],
    "languages": [
      {
        "id": "ctrmml",
        "aliases": [
          "ctrmml",
          "MML"
        ],
        "extensions": [
          ".mml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "title": "ctrmml",
      "properties": {
        "ctrmml.languageServer.path": {
          "type": "string",
          "default": "",
          "description": "Path to ctrmml-lsp binary. If empty, the extension downloads it automatically."
        },
        "ctrmml.languageServer.args": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Command-line arguments passed to ctrmml-lsp."
        },
        "ctrmml.languageServer.env": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "default": {},
          "description": "Extra environment variables passed to ctrmml-lsp."
        },
        "ctrmml.languageServer.initializationOptions": {
          "type": [
            "object",
            "null"
          ],
          "default": null,
          "description": "Initialization options for ctrmml-lsp."
        }
      }
    }
  },
  "scripts": {
    "compile": "esbuild src/extension.ts --bundle --platform=node --target=node18 --format=cjs --outfile=out/extension.js --sourcemap --minify --legal-comments=none --external:vscode && node scripts/copy-web-tree-sitter-wasm.js",
    "watch": "node scripts/copy-web-tree-sitter-wasm.js && esbuild src/extension.ts --bundle --platform=node --target=node18 --format=cjs --outfile=out/extension.js --sourcemap --external:vscode --watch",
    "typecheck": "tsc -p ./ --noEmit"
  },
  "dependencies": {
    "adm-zip": "^0.5.12",
    "tar": "^6.2.0",
    "vscode-languageclient": "^9.0.1",
    "web-tree-sitter": "^0.26.3"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/node": "^20.11.30",
    "@types/tar": "^6.1.10",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.25.12",
    "typescript": "^5.3.3"
  }
}
